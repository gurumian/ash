<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network client permission (required for SSH connections) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Network server permission (required for TFTP server, etc.) -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Native module execution permission (serialport, ssh2, etc.) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- JIT compilation permission (if needed) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Disable app sandbox (for network access) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Required permission when using Hardened Runtime -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
</dict>
</plist>

